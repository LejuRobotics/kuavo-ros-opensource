<mujoco model="kuavo scene">
  <include file="biped_s45.xml"/>
  <statistic center="0 0 1" extent="1.8"/>
  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="-0.2 -0.2 -0.2" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="160" elevation="-20"/>
  </visual>

  <asset>

    <texture file="../../assets/textures/belt2.png" type="2d" name="wall"/>
    <material name="walls_mat" reflectance="0.1" shininess="0.1" texture="wall" texuniform="true"/>

    <texture file="../../assets/textures/roof1.png" type="2d" name="roof"/>
    <material name="roofs_mat" reflectance="0.1" shininess="0.1" texture="roof" texuniform="true" />

    <texture file="../../assets/textures/ceramic.png" type="2d" name="belt"/>
    <material name="belt_mat"  texture="belt" texuniform="true"/>

    <!-- 地面纹理 -->
    <texture name="ground_tex"
           type="2d"
           file="../../assets/textures/ground2.png"        
           />
    <material name="ground_mat"
            texture="ground_tex"
            texuniform="true"            
            reflectance="0"/> 

    <texture name="tex-ceramic" type="cube" file="../../assets/textures/ceramic.png"/>
    <material name="table_ceramic"
              texture="tex-ceramic"
              specular="0.20" shininess="0" reflectance="0"/>

    <texture name="tex-steel-brushed" type="cube" file="../../assets/textures/steel-brushed.png"/>
    <material name="table_legs_metal"
              texture="tex-steel-brushed"
              specular="0.0"  shininess="0.8" reflectance="0.8"/>
  </asset>

  <worldbody>
    <light pos="5 0.5 5" dir="-1 0 -1" directional="false"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="ground_mat"/>

    <geom name="wall_front"
          type="box"
          size="10 5 2"
          pos="0 10 2.5"
          euler="-1.57079633 0 3.14159265"
          material="walls_mat"
          contype="0" conaffinity="0"
          />

    <geom name="wall_back"
          type="box"
          size="10 5 2"
          pos="0 -10 2.5"
          euler="-1.57079633 0 0"
          material="walls_mat"
          contype="0" conaffinity="0"
          />

    <geom name="wall_right"
          type="box"
          size="10 5 2"
          pos="10 0 2.5"
          euler="0 1.57079633 1.57"
          material="walls_mat"
          contype="0" conaffinity="0"
          />

    <geom name="wall_left"
          type="box"
          size="10 5 2"
          pos="-10 0 2.5"
          euler="0 -1.57079633 1.57"
          material="walls_mat"
          contype="0" conaffinity="0"
          />

    <geom name="roof"
          type="plane"
          size="10 10 5"
          pos="0 0 5"
          euler="3.14159265 0 0"
          material="roofs_mat"/>



    <body name="belt_plate1" pos="0 0.7 0.85">  
      <inertial pos="0 0 0" mass="1e-1" diaginertia="1e-6 1e-6 1e-6"/>
      <joint name="belt_slide" type="slide" axis="1 0 0" range="-20 20" damping="0.001"/>
      <geom  name="belt_geom1" type="box"
            size="100 0.3 0.01"           
            material="belt_mat"
            friction="1.0 0.005 0.0001"/>
    </body>

    <body name="belt_plate2" pos="0 -3 0.85">  
      <inertial pos="0 0 0" mass="1e-1" diaginertia="1e-6 1e-6 1e-6"/>
      <geom  name="belt_geom2" type="box"
            size="3.3 0.3 0.01"           
            material="belt_mat"
            friction="1.0 0.005 0.0001"/>
    </body>

    <body name="belt_plate3" pos="3 -1.15 0.85">  
      <inertial pos="0 0 0" mass="1e-1" diaginertia="1e-6 1e-6 1e-6"/>
      <geom  name="belt_geom3" type="box"
            size="0.3 1.545 0.01"         
            material="belt_mat"
            friction="1.0 0.005 0.0001"/>
    </body>

    <body name="belt_plate4" pos="-3 -1.15 0.85">  
      <inertial pos="0 0 0" mass="1e-1" diaginertia="1e-6 1e-6 1e-6"/>
      <geom  name="belt_geom4" type="box"
            size="0.3 1.545 0.01"           
            material="belt_mat"
            friction="1.0 0.005 0.0001"/>
    </body>




    <body name="box_grab" pos="1 0.52 0.95">
      <freejoint name="box_grab"/>
      <geom name="box_on_belt" type="cylinder" size="0.0235 0.08"
            mass="1e-2"
            friction="1.0 0.005 0.0001"              
            rgba="2.0 0 0 1"
            pos="0 0 0"/>

      <geom name="box_base_disk" type="box" size="0.06 0.06 0.01"
            mass="1e-2"
            friction="1 0.005 0.0001"
            rgba="1 0 0 1"
            pos="0 0 -0.081"/>
    </body>



    <body name="table" pos="0.7 -0.6 0.85">
      <!-- ── 桌面 ── -->
      <geom name="table_top"
            type="box"
            size="0.40 0.8 0.02"         
            material="table_ceramic"      
            friction="1 0.005 0.0001"/>

      <!-- marker -->
      <geom name="marker1_1" type="box" size="0.01 0.14 0.001"
            rgba="1 0 0 1"
            pos="-0.08 0.13 0.021"
            contype="0" conaffinity="0"/>

      <geom name="marker1_2" type="box" size="0.14 0.01 0.001"
            rgba="1 0 0 1"
            pos="-0.21 0.28 0.021"
            contype="0" conaffinity="0"/>

      <geom name="marker1_3" type="box" size="0.01 0.14 0.001"
            rgba="1 0 0 1"
            pos="-0.34 0.13 0.021"
            contype="0" conaffinity="0"/>

      <geom name="marker1_4" type="box" size="0.14 0.01 0.001"
            rgba="1 0 0 1"
            pos="-0.21 0 0.021"
            contype="0" conaffinity="0"/>
      <!-- ── 桌腿 ── -->
      <geom name="leg_fl" type="cylinder"
            size="0.03 0.4"               
            pos="0.2  0.6 -0.4"
            material="table_legs_metal"
            contype="0" conaffinity="0"/>
      <geom name="leg_fr" type="cylinder"
            size="0.03 0.4"
            pos=" 0.2 -0.6 -0.4"
            material="table_legs_metal"
            contype="0" conaffinity="0"/>
      <geom name="leg_rl" type="cylinder"
            size="0.03 0.4"
            pos="-0.2  0.6 -0.4"
            material="table_legs_metal"
            contype="0" conaffinity="0"/>
      <geom name="leg_rr" type="cylinder"
            size="0.03 0.4"
            pos="-0.2 -0.6 -0.4"
            material="table_legs_metal"
            contype="0" conaffinity="0"/>
    </body>
  </worldbody>

  <actuator>
    <velocity name="belt_speed" joint="belt_slide" kv="1" ctrlrange="-0.1 0.1"/>
  </actuator>


